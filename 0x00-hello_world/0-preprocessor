#!/bin/bash

CFILE="your_c_file.c"  # Update this variable with your C file name
OUTPUT_FILE="c"        # Output file name

cpp -P "$CFILE" -o "$OUTPUT_FILE"

betty "$OUTPUT_FILE" > "$OUTPUT_FILE.tmp"
mv "$OUTPUT_FILE.tmp" "$OUTPUT_FILE"

echo "Preprocessing and style conversion completed. Output saved in $OUTPUT_FILE"

